{
	"name": "full-stack-patientor",
	"version": "1.0.0",
	"description": "Full-stack patientor application",
	"license": "ISC",
	"author": "Saku Heinonen",
	"type": "commonjs",
	"main": "dist/index.js",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "npm run build:backend && npm run build:frontend",
		"build:backend": "tsc",
		"build:frontend": "cd client && npm run build",
		"start": "node dist/index.js",
		"dev": "npm run dev:backend",
		"dev:backend": "tsnd --respawn server/index.ts",
		"dev:frontend": "cd client && npm run dev",
		"lint": "npm run lint:backend && npm run lint:frontend",
		"lint:backend": "eslint server --ext .ts --fix",
		"lint:frontend": "cd client && npm run lint",
		"install:all": "npm install && cd client && npm install",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@flydotio/dockerfile": "^0.7.10",
		"@stylistic/eslint-plugin": "^5.1.0",
		"@types/cors": "^2.8.19",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^5.0.3",
		"@types/node": "^20.0.0",
		"eslint": "^9.31.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"uuid": "^11.1.0",
		"zod": "^4.0.5"
	}
}
